: spring-boot-javaLearning starter; .sdkman.init; module=demo; proj=oizehsgl-${module}-spring-boot-starter; spring init \
--target https://start.spring.io \
--language java \
--boot-version 3.2.1 \
--java-version 17 \
--packaging jar \
--type maven-project \
--group-id org.oizehsgl.${module} \
--artifact-id ${proj} \
--description ${proj} \
--package-name org.oizehsgl.${module//-/.} \
--name ${proj} \
--version 1.0.0-SNAPSHOT \
--dependencies lombok,configuration-processor \
${proj}; \
: gitignore;wget -O ${proj}/.gitignore https://www.toptal.com/developers/gitignore/api/java,maven,intellij+all; \
: trash; trash ${proj}/{.mvn,mvnw,mvnw.cmd,HELP.md}; \
: meta; mkdir -p ${proj}/src/main/resources/META-INF/spring; \
: provides; echo provides: ${proj} |tee ${proj}/src/main/resources/META-INF/spring.provides; \
: factories; touch ${proj}/src/main/resources/META-INF/spring.factories; \
: imports; echo org.oizehsgl.${module//-/.}.config.$(sed -E 's/(^|-)([a-z])/\U\2/g' <<<${module})AutoConfiguration |tee ${proj}/src/main/resources/META-INF/spring/org.springframework.boot.autoconfigure.AutoConfiguration.imports;
